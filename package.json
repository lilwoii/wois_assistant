{
  "name": "wois-assistant-shell",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:backend\" \"npm:frontend\" \"npm:start-electron\"",
    "backend": "cd .. && python -m backend.main",
    "frontend": "cd ../frontend && npm start",
    "start-electron": "electron .",
    "build": "cd ../frontend && npm run build && cd ../electron && electron-builder"
  },
  "dependencies": {
    "electron": "^29.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.woi.assistant",
    "productName": "Woi Assistant",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "../frontend/build/**/*",
      "../backend/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "../frontend/public/favicon.ico"
    }
  }
}
